func:ListBox(parent, data){
	l = wList(parent)
	d = foreach(data){
		litem = wListItem(l)
		sel = wSelectable(litem)
		sel.Text(d)}
	return(l)
}

func:CollapseText(parent, title, content){
	c =  wCollapse(parent)
	ch = wCollapseHeader(c)
	cc = wCollapseContent(c)
	ch.Text(title)
	ch.FontSize().Bold()
	cc.Text(content)
	return(c)
}

func:CollapseList(parent, title, data){
	c =  wCollapse(parent)
	ch = wCollapseHeader(c)
	cc = wCollapseContent(c)
	cc.Overflow().AutoY()
	cc.SetHeight("h-40")
	ch.Text(title)
	ch.FontSize().Bold()
	l = ListBox(cc, data)
	return(c)
}

