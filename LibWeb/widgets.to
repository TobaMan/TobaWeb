func:Controller(){
	if(gCounter == 10000){
		webdevice::StopMainLoop()
	}
	EventManager()
	gCounter = gCounter + 1
}

func:Render(pooling){
	if(pooling){webdevice::MainLoop(Controller)}
    else{callback(EventManager)}
}



