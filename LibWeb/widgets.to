func:Indicator(parent, position){
	id = NewId()
	wdg = "<div class='indicator'></div>"
	dom::Wrap(parent, wdg)
	wdg1 = "<span id='_ID_' class='indicator-item _POSITION_'></span>"
	wdg1 = freplace(wdg1, "_ID_", id)
	wdg1 = freplace(wdg1, "_POSITION_", position)
	dom::Append(parent, wdg1)
	return(FromId(id))
}

