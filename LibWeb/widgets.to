func:NewId(){
	gID = gID + 1
	id = "_id" $ strnum(gID) $ "_"
	return(id)
}

func:FromId(id){
	//Transform to jQuery id 
	return("#" $ id)
}

func:IdFromNum(id){
	//Convert widget number to id
	id = "_id" $ strnum(id) $ "_"
	return(id)
}

func:NumFromId(id){
	//Convert jQuery id to the widget number
	id = freplace(id, "#", "")
	id = freplace(id, "_", "")
	id = freplace(id, "id", "")
	id = numstr(id)
	return(id)
}

