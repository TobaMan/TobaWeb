func:SaveInfo(id, info){
	//Save info structure for a widget
	gInfo[NumFromId(id)] = info
}

func:GetInfo(id){
	//Get widget structure info with number or jQuery id
	if(isstr(id)){
		id = NumFromId(id)}
	info = gInfo[id]
	if(!isinst(info)){
		info = Options()
		gInfo[id] = info}
	return(info)
}

