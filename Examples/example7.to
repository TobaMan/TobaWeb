


// Config example

obj:Config(){
	self.name = "appconfig"
	self.font_size = "10px"
	self.editor_theme = "icecoder"
	self.app_theme = "halloween"
	
	func:Apply(self){
		widgets::ChangeAppTheme(self.app_theme)
		editor.Theme(self.editor_theme)
		dom::SetCss(".CodeMirror", "font-size", self.font_size)
	}
	
	func:Save(self){
		storage::Set(self.name, tobyte(self))
	}
	
	func:Restore(self){
		self = frombyte(storage::Get(self.name))
		self.Apply()
	}
}

